<Window x:Class="WorkoutPlannerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workout Planner" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Exercise Management -->
        <GroupBox Header="Add Exercise" Margin="5">
            <StackPanel Margin="10">

                <TextBlock Text="Exercise Name:"/>
                <TextBox x:Name="ExerciseNameBox" Margin="0,5"/>

                <TextBlock Text="Reps:"/>
                <TextBox x:Name="RepsBox" Margin="0,5"/>

                <TextBlock Text="Length (minutes):"/>
                <TextBox x:Name="LengthBox" Margin="0,5"/>

                <TextBlock Text="Calories Burned:"/>
                <TextBox x:Name="CaloriesBurnedBox" Margin="0,5"/>

                <TextBlock Text="Equipment Used:"/>
                <TextBox x:Name="EquipmentBox" Margin="0,5"/>

                <Button Content="Add Exercise" Click="AddExercise_Click" Margin="0,10"/>
                <ListBox x:Name="ExerciseList" Height="200"/>
            </StackPanel>
        </GroupBox>

        <!-- Workout Management -->
        <GroupBox Header="Create Workout" Grid.Column="1" Margin="5">
            <StackPanel Margin="10">
                <TextBlock Text="Workout Name:"/>
                <TextBox x:Name="WorkoutNameBox" Margin="0,5"/>

                <TextBlock Text="Select Exercises:" Margin="0,5"/>
                <ListBox x:Name="WorkoutExerciseSelector" SelectionMode="Extended" Height="150"/>

                <Button Content="Create Workout" Click="AddWorkout_Click" Margin="0,10"/>
                <ListBox x:Name="WorkoutList" Height="150"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
